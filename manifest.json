{
  "manifest_version": 3,
  "name": "Skatepark Extractor for Google Maps",
  "version": "1.0.0",
  "description": "Extract skatepark info from Google Maps and export or sync to TrickBook.",
  "permissions": ["activeTab", "storage", "scripting", "identity"],
  "host_permissions": ["*://www.google.com/maps/*", "https://api.thetrickbook.com/*"],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID",
    "scopes": ["openid", "email", "profile"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.google.com/maps/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
